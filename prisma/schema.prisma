generator client {
  provider = "prisma-client-js"
  // engineType = "library"
  // previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
}

model Screener {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String @unique // unique because we will use the name in routing on the FE
  screenerJson Json
  questions Question[]
  responses ScreenerResponse[] // TODO: do we ever need to get all responses for a screener?
}

model Question {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  domain Domain @relation(fields: [domainId], references: [id])
  domainId String
  screener Screener @relation(fields: [screenerId], references: [id])
  screenerId String
}

model ScreenerResponse {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  screener Screener @relation(fields: [screenerId], references: [id])
  screenerId String
  answers Answer[]
}

model Answer {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  questionId String
  value Int
  screenerResponse ScreenerResponse @relation(fields: [screenerResponseId], references: [id])
  screenerResponseId String
}

model Domain {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  scoringThreshold Int
  scoringOperator String
  level2Assessment String
  questions Question[]
}
